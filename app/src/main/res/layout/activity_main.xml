<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/txt_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIzquierdo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:onClick="clickIzquierdo"
            android:textSize="30sp"/>
    <Button
            android:text="@string/txt_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnDerecho"
            android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/btnIzquierdo"
            android:layout_marginLeft="88dp" android:layout_marginStart="88dp" android:onClick="clickDerecho"
            android:textSize="30sp"/>
    <TextView
            android:text="@string/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="140dp"
            android:layout_marginStart="140dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIzquierdo" android:textSize="24sp"/>
    <TextView
            android:text="@string/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:layout_marginTop="52dp"/>
    <TextView
            android:text="@string/txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txt1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:textSize="18sp"/>
</android.support.constraint.ConstraintLayout>